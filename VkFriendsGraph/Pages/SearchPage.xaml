<Page x:Class="VkFriendsGraph.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VkFriendsGraph.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search Page" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <StackPanel Background="Azure" Width="200" Height="100">
        <TextBox Text="gqudes" Margin="0 5" BorderThickness="1" x:Name="userTb" TextAlignment="Center"/>
        <Button Content="Получить друзей" Command="{Binding GetFriendsCommand}" CommandParameter="{Binding Text, ElementName=userTb}" />
    </StackPanel>
</Page>
