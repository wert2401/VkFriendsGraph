<Page x:Class="VkFriendsGraph.Pages.FriendsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:pages="clr-namespace:VkFriendsGraph.Pages"
      mc:Ignorable="d" 
      Title="FriendsPage">

    <Grid x:Name="MainGrid" MinHeight="500" MinWidth="500" Background="LightYellow">
        <StackPanel MinHeight="100" MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Margin="10" Background="WhiteSmoke">
            <StackPanel Margin="5" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Time of creating graph: " />
                    <TextBlock x:Name="tbCreatingTimer" Text="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Time of rendering graph: " />
                    <TextBlock x:Name="tbRenderingTimer" Text="0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Canvas x:Name="MainCanvas">
            
        </Canvas>
    </Grid>
</Page>
